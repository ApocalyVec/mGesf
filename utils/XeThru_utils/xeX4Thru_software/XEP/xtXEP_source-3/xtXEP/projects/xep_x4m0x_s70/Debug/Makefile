PRODUCT_NAME = xep

HW_PLATFORM = x4m0x_s70

BUILD_CONFIG = Debug

TOP_LEVEL_DIR = ../../..

TARGET_FOLDER = $(TOP_LEVEL_DIR)/projects/$(PRODUCT_NAME)_$(HW_PLATFORM)/$(BUILD_CONFIG)

TARGETS = \
	$(TARGET_FOLDER)/$(PRODUCT_NAME)_$(HW_PLATFORM)_4bl.elf \
	$(TARGET_FOLDER)/$(PRODUCT_NAME)_$(HW_PLATFORM)_4bl.hex \
	$(TARGET_FOLDER)/$(PRODUCT_NAME)_$(HW_PLATFORM).elf \
	$(TARGET_FOLDER)/$(PRODUCT_NAME)_$(HW_PLATFORM).hex \
	$(TARGET_FOLDER)/$(PRODUCT_NAME)_$(HW_PLATFORM).bin \
	$(TARGET_FOLDER)/$(PRODUCT_NAME)_$(HW_PLATFORM).eep \
	$(TARGET_FOLDER)/$(PRODUCT_NAME)_$(HW_PLATFORM).srec \
	$(TARGET_FOLDER)/lib$(PRODUCT_NAME)_$(HW_PLATFORM).a

DEBUG_FLAGS = -DENABLE_TCM -DDEBUG -O0 -g3


all: $(TARGETS) show_size

include $(TOP_LEVEL_DIR)/src/xep.make
